body.presentation {
  div.footer {
    padding: 10px 0 40px;
    color: #A3A3A3;
    font-weight: 300;
    font-size: 24px;
    text-align: center;
  }

  &.index {
    .btn {
      border: 0;
      font-weight: 300;
    }

    .btn-lg {
      padding: 18px 20px;
    }

    .btn-success {
      background: #68B217;

      &:hover{
        background: #63BF00;
      }
    }

    .btn-primary {
      background: #4A90E2;

      &:hover{
        background: #308BF2;
      }
    }

    div.about{
      padding-top: 16px;
      text-align: center;

      h1 {
        font-family: 'HelveticaNeue-Thin', 'Helvetica Neue Thin', 'HelveticaNeue', 'Helvetica';
        font-weight: 300;
        font-size: 48px;
        color: #000;

        span {
          background: url(<%= asset_path 'logo.png' %>) no-repeat;
          background-size: 21px 25px;
          background-position: 3px 17px;
        }
      }

      p {
        font-family: 'HelveticaNeue-Thin', 'Helvetica Neue Thin', 'HelveticaNeue', 'Helvetica';
        font-weight: 300;
        color: #4A4A4A;
        font-size: 24px;
      }

      img {
        position: relative;
        display: block;
        margin:  100px auto 0;
        width: 99%;
        max-width: 380px;
        max-height: 330px;
      }
    }

    div.instructions {
      padding: 40px 0 80px;
      margin-bottom: 31px;
      background: #33352D;
      color: #fff;

      h2 {
        font-weight: 300;
        font-size: 40px;
      }

      p {
        font-weight: 300;
        font-size: 20px;
        padding: 4px 0 8px;
      }

      h3 {
        font-weight: 300;
        font-size: 32px;
        padding: 18px 0 4px;
      }

      a, a:visited{
        color: #fff;
        text-decoration: underline;
      }

      ul {
        padding-top: 4px;
        padding-bottom: 4px;

        li {
          font-weight: 300;
          font-size: 20px;
        }
      }

      div.sms_settings{
        padding-top: 8px;

        ul.nav.nav-tabs{
          border: 0;

          li {
            margin-right: 6px;
            font-size: 18px;

            a {
              border: 0;
              text-decoration: none;
              border-radius: 6px;

              &:hover{
                background: #23241f;
              }
            }

            &.active {
              background: none;

              a {
                background: #000;
              }
            }
          }
        }

        div.tab-content {
          padding: 16px 0;
        }
      }
    }
  }
}