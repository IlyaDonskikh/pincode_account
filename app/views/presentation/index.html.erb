<% title t('.meta_title') %>

<%= content_tag :div, class: 'container' do %>
  <%= content_tag :div, class: 'about' do %>
    <%= content_tag :h1, raw(t '.title') %>
    <%= content_tag :p, raw(t '.text') %><br>

    <%= content_tag :div, class: 'navigation' do %>
      <%= link_to t('.sign_up'), new_user_path, remote: true, class: 'btn btn-primary btn-lg' %>
    <% end %>

    <%= image_tag 'phone.jpg', alt: t('.title') %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'instructions' do %>
  <%= content_tag :div, class: 'container' do %>
    <%= content_tag :div, class: 'col-md-7' do %>
      <%= content_tag :h2, t('.instructions_title') %>
      <%= content_tag :p, t('.instructions_text') %>

      <%= content_tag :p, t('.create_pincode') %>
      <%= render 'create_pincode' %>
      <br>

      <%= content_tag :p, t('.check_pincode') %>
      <%= render 'check_pincode' %><br>
      <%= content_tag :p, t('.responses_text') %>

      <%= content_tag :h3, t('.send_sms') %>
      <%= content_tag :p, t('.send_sms_text') %>
      <%= content_tag :p, t('.send_sms_note') %>

      <%= content_tag :h3, t('.params') %>
      <%= content_tag :p, t('.params_text') %>

      <%= content_tag :h3, t('.price') %>
      <%= content_tag :p, t('.price_text') %>
      <%= content_tag :p, t('.price_note') %>

      <%= content_tag :h3, t('.open_source') %>
      <%= content_tag :p, raw(t '.open_source_text', link: link_to(t('.open_source_link'), 'https://github.com/IlyaDonskikh/pincode')) %>

      <%= content_tag :h3, t('.feedback') %>
      <%= content_tag :p, raw(t '.feedback_text', mail: mail_to('mail@pinc0de.com')) %>
    <% end %>
  <% end %>
<% end %>